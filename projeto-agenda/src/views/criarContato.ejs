<%- include('includes/nav') %>

  <form action="/contatos/register" method="post" class="form register-contact">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <h1>Cadastrar contato</h1>
    <p>Crie um novo contato.</p>

    <%- include('includes/messages') %>

    <div>
      <label for="nome">Nome</label>
      <input type="text" id="nome" placeholder="Informe o nome" name="nome">
    </div>
    <div>
      <label for="sobrenome">Sobrenome</label>
      <input type="text" id="sobrenome" placeholder="Informe o sobrenome" name="sobrenome">
    </div>
    <div>
      <label for="email">Endere√ßo de email</label>
      <input type="email" id="email" placeholder="Informe o email" name="email">
    </div>
    <div>
      <label for="telefone">Telefone</label>
      <input type="tel" id="telefone" placeholder="Informe o telefone" name="telefone">
    </div>
    <button type="submit">Criar contato</button>
  </form>

